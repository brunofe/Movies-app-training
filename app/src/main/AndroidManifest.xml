<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moviesot">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:usesCleartextTraffic="true"
        >
        <activity android:name=".home.movie_detail.MovieDetailActivity"></activity>
        <activity android:name=".home.home.HomeActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".home.searchMovies.SearchMoviesActivity" />
        <activity android:name=".forgotPassword.newPasswordScreen.NewPasswordActivity">

        </activity>
        <activity android:name=".forgotPassword.confirmationDataScreen.ConfirmationDataActivity" />
        <activity android:name=".register.pendingRegisterScreen.PendingRegisterActivity" />
        <activity android:name=".register.tokenValidationScreen.TokenValidationActivity" />
        <activity android:name=".register.newUserScreen.NewUserActivity" />
        <activity android:name=".login.loginScreen.LoginActivity" />
        <activity android:name=".login.startScreen.StartActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>